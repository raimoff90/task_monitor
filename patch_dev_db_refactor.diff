+@app.get("/history", response_class=HTMLResponse)
+async def history(request: Request):
+    db = next(models.get_db())
+    changes = db.query(models.Change).order_by(models.Change.id.desc()).all()
+
+    rows = []
+    for ch in changes:
+        task_title = db.query(models.Task.title).filter(models.Task.id == ch.task_id).scalar()
+        rows.append({
+            "id": ch.id,
+            "task_id": ch.task_id,
+            "task_title": task_title or "Unknown",
+            "timestamp": ch.timestamp,
+            "change_type": ch.change_type,
+            "details": ch.details,
+        })
+
+    template = env.get_template("history.html")
+    return template.render({"request": request, "changes": rows})

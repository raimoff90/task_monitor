+"""Простой сидинг тестовых данных.
+Запуск:  python -m scripts.seed
+"""
+from backend.db import SessionLocal, engine
+from backend.models import Base, Task
+
+
+def run():
+    # Создаем таблицы, если их нет (для локального дев-старта)
+    Base.metadata.create_all(bind=engine)
+
+    db = SessionLocal()
+    try:
+        if not db.query(Task).first():
+            db.add_all([
+                Task(title="Demo task 1", status="new", sort_order=1),
+                Task(title="Demo task 2", status="in_progress", sort_order=2),
+            ])
+            db.commit()
+            print("Seed: added demo tasks")
+        else:
+            print("Seed: tasks already exist, skip")
+    finally:
+        db.close()
+
+
+if __name__ == "__main__":
+    run()
